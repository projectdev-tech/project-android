<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Card 1 -->
        <include
            layout="@layout/ddaftar_transaksi"
            android:id="@+id/item1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Card 2 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/receipt_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_receipt"
                    android:contentDescription="Receipt Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/order_number_text_view"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="No Order : 306-2025-04-22-00003"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/receipt_icon"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="21 April 2025, 13:18.00"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/order_number_text_view"
                    app:layout_constraintStart_toEndOf="@+id/receipt_icon"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon" />

                <ImageView
                    android:id="@+id/arrow_icon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"
                    android:contentDescription="Arrow Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 3 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/receipt_icon2"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_receipt"
                    android:contentDescription="Receipt Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/order_number_text_view2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="No Order : 306-2025-04-22-00002"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/receipt_icon2"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon2" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="14 April 2025, 13:18.00"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/order_number_text_view2"
                    app:layout_constraintStart_toEndOf="@+id/receipt_icon2"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon2" />

                <ImageView
                    android:id="@+id/arrow_icon2"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"
                    android:contentDescription="Arrow Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card 4 -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="4dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:foreground="?attr/selectableItemBackground"
                android:padding="16dp">

                <ImageView
                    android:id="@+id/receipt_icon3"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/icon_receipt"
                    android:contentDescription="Receipt Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" />

                <TextView
                    android:id="@+id/order_number_text_view3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="No Order : 306-2025-04-22-00001"
                    android:textColor="#000000"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/receipt_icon3"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon3" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"
                    android:text="7 April 2025, 13:18.00"
                    android:textColor="#7A7A7A"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@+id/order_number_text_view3"
                    app:layout_constraintStart_toEndOf="@+id/receipt_icon3"
                    app:layout_constraintEnd_toStartOf="@+id/arrow_icon3" />

                <ImageView
                    android:id="@+id/arrow_icon3"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"
                    android:contentDescription="Arrow Icon"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>