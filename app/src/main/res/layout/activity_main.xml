<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF"
    tools:context=".productcatalog.MainActivity">

    <!-- Top: Search bar & notification -->
    <LinearLayout
        android:id="@+id/searchBellContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Search Bar -->
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="48dp"
            android:background="@drawable/edittext_background"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            android:elevation="4dp"
            android:layout_marginEnd="12dp">

            <ImageView
                android:id="@+id/searchIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_search"
                app:tint="#666666" />

            <EditText
                android:id="@+id/searchEditText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toEndOf="@id/searchIcon"
                android:layout_marginStart="8dp"
                android:background="@android:color/transparent"
                android:hint="Cari produk..."
                android:textColorHint="#666666"
                android:inputType="text"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <!-- Notification Icon with Badge -->
        <FrameLayout
            android:layout_width="40dp"
            android:layout_height="48dp">

            <ImageView
                android:id="@+id/notificationIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_bell"
                app:tint="#666666" />

            <TextView
                android:id="@+id/badge"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="4dp"
                android:background="@drawable/badge_background"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="10sp"
                android:gravity="center" />
        </FrameLayout>
    </LinearLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_below="@id/searchBellContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Kategori Section -->
            <TextView
                android:id="@+id/tvKategori"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kategori"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginBottom="16dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fillViewport="true"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle_grey"
                            android:src="@drawable/dummy_cat"
                            android:scaleType="centerInside"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Makanan\nMinuman"
                            android:maxLines="2"
                            android:lineSpacingExtra="4dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#444"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle_grey"
                            android:src="@drawable/dummy_cat"
                            android:scaleType="centerInside"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perawatan\nRumah"
                            android:maxLines="2"
                            android:lineSpacingExtra="4dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#444"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle_grey"
                            android:src="@drawable/dummy_cat"
                            android:scaleType="centerInside"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perlengkapan\nMandi"
                            android:maxLines="2"
                            android:lineSpacingExtra="4dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#444"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle_grey"
                            android:src="@drawable/dummy_cat"
                            android:scaleType="centerInside"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gas\nAir"
                            android:maxLines="2"
                            android:lineSpacingExtra="4dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#444"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="8dp">

                        <ImageView
                            android:layout_width="64dp"
                            android:layout_height="64dp"
                            android:background="@drawable/bg_circle_grey"
                            android:src="@drawable/dummy_cat"
                            android:scaleType="centerInside"
                            android:padding="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Perlengkapan/nListrik"
                            android:maxLines="2"
                            android:lineSpacingExtra="4dp"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:textColor="#444"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>

            <!-- Banner Promo Section -->
            <!-- Banner Promo Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Banner Promo"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="16dp"
                android:clipToPadding="false"
                android:scrollbars="none"
                android:background="@color/white"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    >

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner1" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner2" />

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/banner3" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:gravity="center">

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_selected" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_unselected" />

                <View
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_margin="4dp"
                    android:background="@drawable/indicator_unselected" />
            </LinearLayout>

            <!-- Pilihan Produk Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pilihan Produk"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dummy_cat"
                    android:scaleType="centerInside"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satuan Produk"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tersedia"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+ Tambah"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dummy_cat"
                    android:scaleType="centerInside"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satuan Produk"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tersedia"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+ Tambah"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dummy_cat"
                    android:scaleType="centerInside"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satuan Produk"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tersedia"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+ Tambah"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:elevation="2dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/bg_card"
                android:padding="12dp"
                android:layout_marginBottom="16dp"
                android:gravity="center_vertical"
                android:layout_marginEnd="4dp"
                android:layout_marginStart="4dp"
                android:elevation="2dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/dummy_cat"
                    android:scaleType="centerInside"
                    android:background="#EEEEEE"
                    android:layout_marginEnd="12dp" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Produk"
                        android:textStyle="bold"
                        android:textSize="16sp"
                        android:textColor="#222222" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Satuan Produk"
                        android:textSize="14sp"
                        android:textColor="#666666"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tersedia"
                        android:textSize="14sp"
                        android:textColor="#4CAF50"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Rp 10.000"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800"
                        android:layout_marginTop="8dp" />
                </LinearLayout>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="+ Tambah"
                    android:textColor="#FFFFFF"
                    android:backgroundTint="#FF9800"
                    android:layout_marginStart="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:elevation="2dp" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        app:itemIconTint="@color/bottom_nav_selector"
        app:itemTextColor="@color/bottom_nav_selector"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav_menu" />

</RelativeLayout>
