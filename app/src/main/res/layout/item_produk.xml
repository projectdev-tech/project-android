<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:background="@drawable/product_background"
    android:layout_marginTop="8dp">

    <ImageView
        android:id="@+id/image_product"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_product_placeholder" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Produk"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_product_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Satuan Produk"
            android:textColor="#888888"
            android:textSize="12sp" />

        <!-- Optional Dynamic Fields -->
        <TextView
            android:id="@+id/text_field_1"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_field_2"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_field_3"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/text_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:text="Rp 10.000"
            android:textColor="#FF9800"
            android:textStyle="bold"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/text_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tersedia"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

        <!-- Optional Dynamic Status Fields -->
        <TextView
            android:id="@+id/text_status_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_status_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_status_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/text_status_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#4CAF50"
            android:textSize="12sp" />

        <Button
            android:id="@+id/button_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+ Tambah"
            android:backgroundTint="#FF9800"
            android:textColor="#FFFFFF"
            android:textSize="12sp" />
    </LinearLayout>
</LinearLayout>
