<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F5F5F5"
    tools:context=".ProfileActivity">

    <!-- Profile Photo Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:background="#FFFFFF">

        <ImageView
            android:id="@+id/profileImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/icon_profile"
            android:padding="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ubah Foto Profil"
            android:textColor="#FF9800"
            android:textSize="14sp"
            android:layout_marginTop="8dp"/>
    </LinearLayout>

< android:LinearLayout

    <!-- Profile Information Section -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp">

            <!-- Nama Pemilik -->
            <LinearLayout
                android:id="@+id/namaPemilikContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemilik"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/namaPemilikValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agung Mulyana"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Nama Toko -->
            <LinearLayout
                android:id="@+id/namaTokoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Toko"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/namaTokoValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Toko Sumber Agung"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="40dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Nomor KTP -->
            <LinearLayout
                android:id="@+id/nomorKTPContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor KTP"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/nomorKTPValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2010100100011"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="40dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Nomor Telepon -->
            <LinearLayout
                android:id="@+id/nomorTeleponContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nomor Telepon"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/nomorTeleponValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0877700001201"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="13dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Alamat Email -->

            <LinearLayout
                android:id="@+id/emailContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Email"
                        android:textColor="#757575"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/emailValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="25dp"
                        android:text="sumberagung@gmail.com"
                        android:textColor="#212121"
                        android:textSize="16sp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Password -->
            <LinearLayout
                android:id="@+id/passwordContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/passwordValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="*********"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="50dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"/>

            <!-- Alamat Toko -->
            <LinearLayout
                android:id="@+id/alamatTokoContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:background="#FFFFFF"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Alamat Toko"
                        android:textSize="14sp"
                        android:textColor="#757575"/>

                    <TextView
                        android:id="@+id/alamatTokoValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Jl. Dikat Pemda No.184, Bolang Tianglu, Kec. Kip. Batu, Tangerang, Banten 15810"
                        android:textSize="16sp"
                        android:textColor="#212121"
                        android:layout_marginStart="30dp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/icon_kanan"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


