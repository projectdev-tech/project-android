<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".EditNamaPemilikActivity">

    <!-- Toolbar with back button and title -->
    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="16dp"
        android:paddingHorizontal="8dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icon_kiri"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemilik"
            android:textSize="16sp"
            android:textColor="#212121"
            android:layout_toEndOf="@id/btnBack"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_below="@id/toolbar" />

    <!-- Form content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/divider"
        android:layout_above="@id/btnSimpan"
        android:orientation="vertical"
        android:padding="11dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Pemilik"
            android:textSize="14sp"
            android:textColor="#757575" />

        <EditText
            android:id="@+id/etNamaPemilik"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Agung Mulyana"
            android:textSize="16sp"
            android:textColor="#211"
            android:background="@drawable/edit_text_background"
            android:padding="12dp"
            android:layout_marginTop="4dp"
            android:inputType="textPersonName"
            android:singleLine="true" />
    </LinearLayout>

    <!-- Tombol Simpan -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSimpan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="16dp"
        android:text="Simpan"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:paddingVertical="12dp"
        app:cornerRadius="8dp"
        app:backgroundTint="#FFA500" />

</RelativeLayout>