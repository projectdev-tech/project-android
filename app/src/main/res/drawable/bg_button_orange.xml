<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F57C00" /> <!-- Lebih gelap saat ditekan -->
            <corners android:radius="24dp" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FF9800" /> <!-- Oranye terang -->
            <corners android:radius="24dp" />
            <padding
                android:left="16dp"
                android:top="8dp"
                android:right="16dp"
                android:bottom="8dp" />
            <stroke
                android:width="1dp"
                android:color="#FFC107" />
        </shape>
    </item>
</selector>
