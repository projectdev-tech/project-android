<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" />
        </shape>
    </item>

    <!-- Map grid lines -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="#CCCCCC" android:width="1dp" android:dashWidth="4dp" android:dashGap="4dp" />
        </shape>
    </item>

    <!-- Roads -->
    <item>
        <rotate android:fromDegrees="45" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="line">
                <stroke android:color="#BBBBBB" android:width="3dp" />
                <size android:height="200dp" />
            </shape>
        </rotate>
    </item>

    <item>
        <rotate android:fromDegrees="-30" android:pivotX="50%" android:pivotY="50%">
            <shape android:shape="line">
                <stroke android:color="#BBBBBB" android:width="3dp" />
                <size android:height="100dp" />
            </shape>
        </rotate>
    </item>
</layer-list>